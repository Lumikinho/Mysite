---
// src/components/ProjectCard.astro
import { Image } from "astro:assets";

interface Props {
  title: string;
  description: string;
  tags: string[];
  image: {
    src: string;
    alt: string;
  };
  githubUrl?: string;
  liveUrl?: string;
}

const { title, description, tags, image, githubUrl, liveUrl } = Astro.props;
---

<div class="rounded-2xl border border-zinc-800 bg-zinc-900/40 p-6 flex flex-col gap-4">
  <div class="aspect-video overflow-hidden rounded-lg border border-zinc-800">
    <Image 
      src={image.src} 
      alt={image.alt}
      width={1280} 
      height={720} 
      class="w-full h-full object-cover" 
    />
  </div>

  <div class="flex flex-col gap-2">
    <h3 class="text-xl font-semibold">{title}</h3>
    <p class="text-sm text-zinc-400">{description}</p>
  </div>
  
  <div class="flex flex-wrap gap-2">
    {tags.map(tag => (
      <span class="text-xs font-medium bg-zinc-800 text-zinc-300 px-2 py-1 rounded-full">{tag}</span>
    ))}
  </div>

  <div class="mt-2 flex gap-4">
    {githubUrl && (
      <a href={githubUrl} target="_blank" rel="noreferrer" class="inline-flex items-center gap-1 text-sm font-medium text-zinc-300 hover:text-white transition-colors">
        Código Fonte
        <span class="text-xs">↗</span>
      </a>
    )}
    {liveUrl && (
       <a href={liveUrl} target="_blank" rel="noreferrer" class="inline-flex items-center gap-1 text-sm font-medium text-zinc-300 hover:text-white transition-colors">
        Ver Online
        <span class="text-xs">↗</span>
      </a>
    )}
  </div>
</div>
